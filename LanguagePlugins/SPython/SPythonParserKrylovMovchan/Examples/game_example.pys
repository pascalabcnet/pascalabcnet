import random as rnd

a = rnd.randint(1, 100)
print('Guess a number between 1 and 100')
attempts = 0
while True:
    attempts += 1
    guess = int(input())
    if guess < a:
        print('Try number greater than', guess);
    elif guess > a:
        print('Try number less than', guess)
    else:
        print('You won!!!')
        break
print('You needed', attempts, 'attempts')