// Присваивания += -= *= /=

begin
  var i: integer := 1;
  Println('i := 1; i = ',i);
  i += 2; // Увеличение на 2
  Println('i += 2; i = ',i);
  i *= 3; // Умножение на 3
  Println('i *= 3; i = ',i);
  Println;
  var r: real := 6;
  Println('r := 6; r = ',r);
  r /= 2;
  Println('r /= 2; r = ',r);
end.